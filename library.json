{
    "name": "no-OS-FatFS-SD-SPI-RPi-Pico",
    "version": "1.0.2",
    "description": "Simple library for SD Cards on the RP2040",
    "keywords": ["Data Storage", "FatFs", "SD card", "Secure Digital card", "SPI", "SDIO"],
    "repository":
    {
      "type": "git",
      "url": "https://github.com/carlk3/no-OS-FatFS-SD-SPI-RPi-Pico.git#sdio"
    },
    "authors":
    [
      {
        "name": "Carl Kugler",
        "email": "carlk3@gmail.com"
      }
    ],
    "license": "Apache-2.0 AND MIT-Modern-Variant",
    "frameworks": "arduino",
    "platforms": "raspberrypi",
    "examples": [
      {
          "name": "one_SDIO",
          "base": "examples/PlatformIO/one_SDIO",
          "files": [
              "platformio.ini",
              "src/main.cpp"
          ]
      },
      {
        "name": "one_SPI",
        "base": "examples/PlatformIO/one_SPI",
        "files": [
            "platformio.ini",
            "src/main.cpp"
        ]
      },
      {
        "name": "one_SPI_one_SDIO",
        "base": "examples/PlatformIO/one_SPI_one_SDIO",
        "files": [
            "platformio.ini",
            "src/main.cpp"
        ]
      },
      {
        "name": "data_logger",
        "base": "examples/PlatformIO/data_logger",
        "files": [
            "platformio.ini",
            "src/main.cpp"
        ]
      },
      {
        "name": "hw_debug",
        "base": "examples/PlatformIO/hw_debug",
        "files": [
            "platformio.ini",
            "src/main.cpp"
        ]
      }

    ],
    "build": {
      "srcFilter": [
          "-<.git/> -<.svn/>",
          "+<FatFs.cpp>",
          "+<ff15/source/ff.c>",
          "+<ff15/source/ffsystem.c>",
          "+<ff15/source/ffunicode.c>",
          "+<rtc.c>",
          "+<f_util.c>",
          "+<glue.c>",
          "+<my_debug.c>",
          "+<rtc.c>",
          "+<sd_driver/SDIO/rp2040_sdio.c>",
          "+<sd_driver/SDIO/sd_card_sdio.c>",
          "+<sd_driver/sd_card.c>",
          "+<sd_driver/SPI/crc.c>",
          "+<sd_driver/SPI/sd_card_spi.c>",
          "+<sd_driver/SPI/sd_spi.c>",
          "+<sd_driver/SPI/spi.c>",
          "+<tests/app4-IO_module_function_checker.c>"
      ],
      "flags": [
        "-D _GNU_SOURCE",
        "-D __GNU_VISIBLE",
        "-I src/sd_driver",
        "-I src/include",
        "-I src/ff15/source"
      ]
    }
  }
